{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceFolder}/env/bin/python",
            "module": "flask.cli",
            "cwd": "${workspaceRoot}",
            "env": {
                "FLASK_APP": "manage",
                "LC_ALL": "en_US.utf-8",
                "LANG": "en_US.utf-8"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}